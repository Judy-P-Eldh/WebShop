@using WebShop.Models.ViewModels
@model IEnumerable<OrderViewModel>

@{
	ViewData["Title"] = "Placed Orders";
}

<h1>Placed Orders</h1>

<table class=" table table-responsive">
	<thead>
		<tr>
			<th scope="col">
				@Html.DisplayNameFor(model => model.OrderDate)
				@Html.DisplayNameFor(model => model.TotalPrice)
				@Html.DisplayNameFor(model => model.ProductOrders)
			</th>
			
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td scope="row">
					@Html.DisplayFor(modelItem => item.OrderDate)
					@Html.DisplayFor(modelItem => item.TotalPrice)
					@Html.DisplayFor(modelItem => item.ProductOrders)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
		<div>
			<a class="btn btn-primary" asp-controller="Product" asp-action="Index">Continue shopping</a>
		</div>
	</tbody>
</table>